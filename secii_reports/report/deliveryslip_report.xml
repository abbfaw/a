<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="deliveryslip_report_cogebat" inherit_id="stock.report_delivery_document">
        <xpath expr="//div[@name='div_origin']" position="replace">
            <div></div>
        </xpath>
        <xpath expr="//div[@name='div_sched_date']" position="replace">
            <div></div>
        </xpath>
        <xpath expr="//t[@t-call='web.external_layout']//h2" position="replace">
            <div></div>
        </xpath>
        <xpath expr="//t[@t-call='web.external_layout']//t[@t-set='partner']" position="replace">
            <div></div>
        </xpath>
        <xpath expr="//div[@name='div_outgoing_address']" position="replace">
            <div></div>
        </xpath>
        <xpath expr="//table[@name='stock_move_table']" position="before">
            <div class="row mt32 mb32" style="margin-bottom: 15px">
                <div class="col-auto">
                    <strong style="font-size: 30px">Bon de Livraison</strong>
                </div>
            </div>
            <div class="row mt32 mb32" style="margin-bottom:15px">
                <div class="col-auto">
                    <div>
                        <strong>N°BL : </strong> <span t-field="o.name"/>
                    </div>
                    <div>
                        <strong>Date de la commande : </strong> <span t-field="o.scheduled_date" t-options='{"format": "MM/dd/yyyy"}'/>
                    </div>
                    <div></div>
                </div>
                <div class="col-auto">
                    <div>
                        <strong>Nom du client :</strong> <span t-field="o.partner_id.name"/>
                    </div>
                    <div>
                        <strong>Adresse du client :</strong> <span t-field="o.partner_id.contact_address"/>
                    </div>
                    <div>
                        <strong>N°BC :</strong> <span t-field="o.origin"/>
                    </div>
                </div>
            </div>
        </xpath>
        <!--xpath expr="//t[@t-call='web.external_layout']//h2" position="attributes">
            <attribute name="style">font-size:15px;color:#AF850C</attribute>
        </xpath-->
    </template>
</odoo>