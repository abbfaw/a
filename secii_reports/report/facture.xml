<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="facture_report_cogebat" inherit_id="account.report_invoice_document">
        <xpath expr="//t[@t-call='web.external_layout']//div[hasclass('page')]//h2" position="replace">
            <div></div>
        </xpath>
        <xpath expr="//div[@name='invoice_date']" position="replace">
            <div></div>
        </xpath>
        <xpath expr="//div[@name='due_date']" position="replace">
            <div></div>
        </xpath>
        <xpath expr="//div[@name='origin']" position="replace">
            <div></div>
        </xpath>
        <xpath expr="//t[@t-set='address']" position="replace">
            <div class="row mt32 mb32" style="margin-bottom: 15px">
                <div class="col-auto">
                    <strong style="font-size: 30px">Facture</strong>
                </div>
            </div>
            <div class="row mt32 mb32" style="margin-bottom: 15px">
                <div class="col-auto">
                    <div>
                        <strong>N°Facture : </strong> <span t-field="o.name"/>
                    </div>
                    <div>
                        <strong>Date de la facture : </strong> <span t-field="o.invoice_date"/>
                    </div>
                </div>
                <div class="col-auto">
                    <div>
                        <strong>Nom du client :</strong> <span t-field="o.partner_id.name"/>
                    </div>
                    <div>
                        <strong>Adresse du client :</strong> <span t-field="o.partner_id.contact_address"/>
                    </div>
                    <div>
                        <strong>N°BC :</strong> <span t-field="o.invoice_origin"/>
                    </div>
                </div>
            </div>
        </xpath>
        <!--xpath expr="//t[@t-call='web.external_layout']//div[hasclass('page')]//h2" position="attributes">
            <attribute name="style">font-size:18px</attribute>
        </xpath-->
        <!--xpath expr="//div[@name='origin']" position="replace">
            <div class="col-auto col-3 mw-100 mb-2" t-if="o.invoice_origin" name="origin">
                <strong>N°BC:</strong>
                <p class="m-0" t-field="o.invoice_origin"/>
            </div>
        </xpath-->
        <xpath expr="//p[@name='payment_communication']" position="attributes">
            <attribute name="style">padding-top:10px; margin-top: 10px</attribute>
        </xpath>
    </template>
</odoo>