<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="sale_report_cogebat" inherit_id="sale.report_saleorder_document">
        <xpath expr="//div[@id='informations']" position="replace">
            <div></div>
        </xpath>
        <xpath expr="//h2" position="replace">
            <div></div>
        </xpath>
        <xpath expr="//t[@t-set='address']" position="replace">
            <div class="row mt32 mb32" style="margin-bottom: 15px">
                <div class="col-auto">
                    <strong t-if="doc.state not in ['draft','sent']" style="font-size: 30px">Bon de commande</strong>
                    <strong t-if="doc.state in ['draft','sent']" style="font-size: 30px">Devis</strong>
                </div>
            </div>
            <div class="row mt32 mb32" style="margin-bottom: 15px">
                <div class="col-auto">
                    <div>
                        <strong>NÂ°BC :</strong> <span t-field="doc.name"/>
                    </div>
                    <div>
                        <strong>Date de commande :</strong> <span t-field="doc.date_order" t-options='{"format": "MM/dd/yyyy"}'/>
                    </div>
                </div>
                <div class="col-auto">
                    <div>
                        <strong>Nom du client :</strong> <span t-field="doc.partner_id.name"/>
                    </div>
                    <div>
                        <strong>Adresse du client :</strong> <span t-field="doc.partner_id.contact_address"/>
                    </div>
                </div>
            </div>
        </xpath>
        <!--xpath expr="//t[@t-call='web.external_layout']//h2[hasclass('mt16')]" position="attributes">
            <attribute name="style">font-size:18px</attribute>
        </xpath-->
        <!--xpath expr="//table[hasclass('table')]" position="attributes">
            <attribute name="style">font-size:11.2px</attribute>
        </xpath-->
        <!--xpath expr="//div[hasclass('clearfix')]//table[hasclass('table')]" position="attributes">
            <attribute name="style">font-size:11.2px</attribute>
        </xpath-->
    </template>

</odoo>