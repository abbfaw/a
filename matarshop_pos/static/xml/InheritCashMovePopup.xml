<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
     <t t-name="InheritCashMovePopup" t-inherit="point_of_sale.CashMovePopup" t-inherit-mode="extension" owl="1">
         <xpath expr="//*[hasclass('cash-move-popup')]//*[hasclass('body')]//*[hasclass('cash-move')]"
                position="replace">

             <div class="cash-move">
                 <div class="input-amount">
                    <span t-on-click="() => this.onClickButton('in')" class="input-type"
                          t-att-class="{ highlight: state.inputType == 'in' }">
                        Cash In
                    </span>
                    <span t-on-click="() => this.onClickButton('out')" class="input-type"
                          t-att-class="{ 'red-highlight': state.inputType == 'out' }">
                        Cash Out
                    </span>
                    <div class="input-field">
                        <input type="text" name="amount" t-model="state.inputAmount"
                               t-ref="input-amount-ref" t-on-keypress="_onAmountKeypress"/>
                        <t t-if="env.pos.currency.symbol.length > 1">
                            <span class="left-currency" t-esc="env.pos.currency.symbol"/>
                        </t>
                        <t t-else="">
                            <span class="currency" t-esc="env.pos.currency.symbol"/>
                        </t>
                    </div>
                </div>
<!--                 remplacement du champs motif de type input par de type selection-->
<!--                 <textarea name="reason" t-model="state.inputReason" placeholder="Reason"></textarea>-->
                 <span class="label" style="margin-top:10x;">Motif</span>
                 <select class="w-100 o_input" name="reason" t-model="state.inputReason">
                     <t t-foreach="reasonValues()" t-as="value" t-key="value.name">
                         <option t-att-value="value.name">
                             <t t-esc="value.name"/>
                         </option>
                     </t>
                 </select>
                 <span>
                     <textarea name="comment" t-model="state.inputComment" placeholder="Description"></textarea>
                 </span>
                 <span t-if="state.inputHasError" class="error-message">
                     <t t-esc="errorMessage"/>
                 </span>
             </div>

         </xpath>

     </t>
</templates>

