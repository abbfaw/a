<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="view_transfer_tree" model="ir.ui.view">
        <field name="name">transfer.form.tree</field>
        <field name="model">transfer.form</field>
        <field name="arch" type="xml">
            <tree>
                <field name="reference" width="2"/>
                <field name="date" width="2"/>
                <field name="client" width="2"/>
                <field name="amount" sum="Total of Amount" width="2"/>
                <field name="operation_type" widget="badge"
                       decoration-danger="operation_type == 'transfer'"
                       decoration-success="operation_type == 'payment'"
                       width="2"/>
                <field name="state" widget="badge"
                       decoration-success="state == 'confirm'"
                       decoration-info="state == 'draft'"
                       width="2"/>
            </tree>
        </field>
    </record>
    <record id="view_transfer_form" model="ir.ui.view">
        <field name="name">transfer.form</field>
        <field name="model">transfer.form</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="state" widget="statusbar" nolabel="1"/>
                    <button name="send_to_balance" string="Valider" type="object" class="btn-primary"
                            attrs="{'invisible': [('state', '=', 'confirm')]}"/>
                    <button name="back_draft" string="Remettre en brouillon" type="object" class="btn-primary"
                            attrs="{'invisible': [('state', '=', 'draft')]}"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name='reference' readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group string="Informations générale">
                            <field name="date" attrs="{'readonly': [('state', '=', 'confirm')]}"/>
                            <field name="operation_type" attrs="{'readonly': [('state', '=', 'confirm')]}"/>
                            <field name="client" attrs="{'readonly': [('state', '=', 'confirm')]}"/>
                            <field name="amount" attrs="{'readonly': [('state', '=', 'confirm')]}"/>
                            <field name="country" attrs="{'invisible': [('operation_type','!=','transfer')],
                                                          'readonly': [('state', '=', 'confirm')]}"/>
                            <field name="money_type" attrs="{'readonly': [('state', '=', 'confirm')]}"/>
                            <field name="is_local" attrs="{'invisible': [('operation_type','=','transfer')],
                                                           'readonly': [('state', '=', 'confirm')]}"/>
                            <field name="add_payment" attrs="{'invisible': [('operation_type','=','payment')],
                                                           'readonly': [('state', '=', 'confirm')]}"/>

                        </group>
                        <group string="Informations du transfert"
                               attrs="{'invisible': [('operation_type','!=','transfer')]}">
                            <field name="currency_code" attrs="{'readonly': [('state', '=', 'confirm')]}"/>
                            <field name="currency" attrs="{'readonly': [('state', '=', 'confirm')]}"/>
                            <field name="calculated_currency"/>
                            <field name="gain_currency"/>
                        </group>
                    </group>
                    <group string="Sélection des fournisseurs"
                           attrs="{'invisible': [('operation_type','!=','transfer')]}">
                        <notebook>
                            <page name="Fournisseurs">
                                <field name="vendor_tree" attrs="{'readonly': [('state', '=', 'confirm')]}">
                                    <tree editable="bottom">
                                        <field name="vendor_id"
                                               options='{"no_open": True}' width="2"/>
                                        <field name="vendor_rate" width="2"/>
                                        <field name="used_amount" width="2" sum="Total"/>
                                        <field name="gain" width="2" sum="Total"/>
                                    </tree>
                                    <form>
                                        <field name="vendor_id"/>
                                        <field name="vendor_rate"/>
                                        <field name="used_amount"/>
                                    </form>
                                </field>
                            </page>
                        </notebook>
                        <group>
                        </group>
                    </group>
                    <group string="Informations du chèque" attrs="{'invisible': [('money_type','!=','bank')]}">
                        <field name="check_num" attrs="{'invisible': [('money_type','!=','bank')],
                                                            'readonly': [('state', '=', 'confirm')]}"/>
                        <field name="bank_ref" attrs="{'invisible': [('money_type','!=','bank')],
                                                           'readonly': [('state', '=', 'confirm')]}"/>
                        <field name="check_attach"
                               attrs="{'invisible': [('money_type','!=','bank')],
                                           'readonly': [('state', '=', 'confirm')]}"
                               widget="many2many_binary"/>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" groups="base.group_user"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="view_transfer_search" model="ir.ui.view">
        <field name="name">transfer.form.search</field>
        <field name="model">transfer.form</field>
        <field name="arch" type="xml">
            <search>
                <field name="client" filter_domain="[
                        '|', ('client', 'ilike', self), ('reference', 'ilike', self)]"/>
                <field name="reference"/>
            </search>
        </field>
    </record>

    <record id="action_transfer_list" model="ir.actions.act_window">
        <field name="name">Liste des opérations</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">transfer.form</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Ajoutez des opérations!
            </p>
            <p>
                Votre liste est vide.
                <br/>
                Commencez par créer des opérations.
            </p>
        </field>
    </record>

    <menuitem id="menu_operations_list"
              name="Opérations"
              parent="menu_transfer_list_root"
              sequence="7"/>

    <menuitem id="menu_transfer_list"
              name="Opérations Clients"
              action="action_transfer_list"
              parent="menu_operations_list"
              sequence="6"/>

</odoo>