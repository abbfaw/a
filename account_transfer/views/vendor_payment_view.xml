<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="view_vendor_payment_tree" model="ir.ui.view">
        <field name="name">vendor.payment.tree</field>
        <field name="model">vendor.payment</field>
        <field name="arch" type="xml">
            <tree>
                <field name="reference" width="2"/>
                <field name="date" width="2"/>
                <field name="vendor" width="2"/>
                <field name="amount" sum="Total of Amount" width="2"/>
                <field name="state" widget="badge"
                       decoration-success="state == 'confirm'"
                       decoration-info="state == 'draft'"
                       width="2"/>
            </tree>
        </field>
    </record>
    <record id="view_vendor_payment_form" model="ir.ui.view">
        <field name="name">vendor.payment</field>
        <field name="model">vendor.payment</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="state" widget="statusbar" nolabel="1"/>
                    <button name="send_to_balance" string="Valider" type="object" class="btn-primary"
                            attrs="{'invisible': [('state', '=', 'confirm')]}"/>
                    <button name="back_draft" string="Remettre en brouillon" type="object" class="btn-primary"
                            attrs="{'invisible': [('state', '=', 'draft')]}"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name='reference' readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group string="Informations générale">
                            <field name="date" attrs="{'readonly': [('state', '=', 'confirm')]}"/>
                            <field name="vendor" attrs="{'readonly': [('state', '=', 'confirm')]}"/>
                            <field name="amount" attrs="{'readonly': [('state', '=', 'confirm')]}"/>
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" groups="base.group_user"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="view_vendor_payment_search" model="ir.ui.view">
        <field name="name">vendor.payment.search</field>
        <field name="model">vendor.payment</field>
        <field name="arch" type="xml">
            <search>
                <field name="vendor" filter_domain="[
                        '|', ('vendor', 'ilike', self), ('reference', 'ilike', self)]"/>
                <field name="reference"/>
            </search>
        </field>
    </record>

    <record id="action_vendor_payment_list" model="ir.actions.act_window">
        <field name="name">Paiements Fournisseurs</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">vendor.payment</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Ajoutez des opérations!
            </p>
            <p>
                Votre liste est vide.
                <br/>
                Commencez par créer des opérations.
            </p>
        </field>
    </record>

    <menuitem id="menu_vendor_payment_list"
              name="Paiements Fournisseurs"
              action="action_vendor_payment_list"
              parent="account_transfer.menu_operations_list"
              sequence="8"/>
</odoo>