<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <record id="view_balance_tree" model="ir.ui.view">
            <field name="name">balance.form.tree</field>
            <field name="model">balance.form</field>
            <field name="arch" type="xml">
                <tree string="Balance des clients" create='false' delete="false">
                    <field name="client" width="150"/>
                    <field name="date" width="150"/>
                    <field name="reference" width="150"/>
                    <field name="country" width="150"/>
                    <field name="rate" width="150"/>
                    <field name="montant_devise" sum="Total" width="150"/>
                    <field name="balance" sum="Total" width="150"/>
                    <field name="debit" sum="Total" width="150"/>
                    <field name="credit" sum="Total" width="150"/>
                    <field name="state" widget="badge" width="150"
                           decoration-danger="state == 'transfer'"
                           decoration-success="state == 'payment'"/>
                </tree>
            </field>
        </record>

        <record id="view_balance_search" model="ir.ui.view">
            <field name="name">balance.form.search</field>
            <field name="model">balance.form</field>
            <field name="arch" type="xml">
                <search>
                    <field name="client" filter_domain="[
                        '|', ('client', 'ilike', self), ('reference', 'ilike', self)]"/>
                    <field name="reference"/>
                    <filter string="Client" name="group_by_client" context="{'group_by' : 'client'}"/>
                </search>
            </field>
        </record>

        <record id="action_balance_list" model="ir.actions.act_window">
            <field name="name">Liste des soldes clients</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">balance.form</field>
            <field name="view_mode">tree</field>
            <field name="context">{'search_default_group_by_client' : 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Ajoutez des transferts!
                </p>
                <p>
                    Votre liste est vide.
                    <br/>
                    Commencez par cr√©er des transferts.
                </p>
            </field>
        </record>

        <menuitem id="menu_transfer_list_root"
                  name="Transferts"
                  web_icon="account_transfer,static/description/icon.png"
                  action="action_balance_list"
                  sequence="6"/>

        <menuitem id="menu_all_balance_menu"
                  name="Soldes"
                  parent="menu_transfer_list_root"
                  sequence="5"/>

        <menuitem id="menu_balance_list"
                  name="Soldes Clients"
                  action="action_balance_list"
                  parent="account_transfer.menu_all_balance_menu"
                  sequence="5"/>
    </data>
</odoo>