<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <record id="view_vendor_balance_tree" model="ir.ui.view">
            <field name="name">vendor.balance.tree</field>
            <field name="model">vendor.balance</field>
            <field name="arch" type="xml">
                <tree string="Balance des fournisseurs" create='false' delete="false">
                    <field name="vendor" width="150"/>
                    <field name="date" width="150"/>
                    <field name="reference" width="150"/>
                    <field name="balance" sum="Total" width="150"/>
                    <field name="debit" sum="Total" width="150"/>
                    <field name="credit" sum="Total" width="150"/>
                    <field name="state" widget="badge" width="150"
                       decoration-danger="state == 'transfer'"
                       decoration-success="state == 'payment'"/>
                </tree>
            </field>
        </record>

        <record id="view_vendor_balance_search" model="ir.ui.view">
        <field name="name">vendor.balance.search</field>
        <field name="model">vendor.balance</field>
        <field name="arch" type="xml">
            <search>
                <field name="vendor" filter_domain="[
                        '|', ('vendor', 'ilike', self), ('reference', 'ilike', self)]"/>
                <field name="reference"/>
                <filter string="Fournisseur" name="group_by_vendor" context="{'group_by' : 'vendor'}"/>
            </search>
        </field>
    </record>

        <record id="action_vendor_balance" model="ir.actions.act_window">
            <field name="name">Liste des soldes fournisseurs</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">vendor.balance</field>
            <field name="view_mode">tree</field>
            <field name="context">{'search_default_group_by_vendor' : 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Ajoutez des transferts!
                </p>
                <p>
                    Votre liste est vide.
                    <br/>
                    Commencez par cr√©er des transferts.
                </p>
            </field>
        </record>

        <menuitem id="menu_balance_vendor"
                  name="Soldes Fournisseurs"
                  action="action_vendor_balance"
                  parent="account_transfer.menu_all_balance_menu"
                  sequence="6"/>
    </data>
</odoo>