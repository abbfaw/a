<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_gainflow_tree" model="ir.ui.view">
        <field name="name">gain.flow.tree</field>
        <field name="model">gain.flow</field>
        <field name="arch" type="xml">
            <tree>
                <field name="reference"/>
                <field name="date"/>
                <field name="description"/>
                <field name="operation_type"/>
                <field name="tree_amount" sum="Total of Amount"/>
                <field name="state" widget="badge"
                       decoration-success="state == 'confirm'"
                       decoration-info="state == 'draft'"
                       width="2"/>
            </tree>
        </field>
    </record>

    <record id="view_gainflow_form" model="ir.ui.view">
        <field name="name">gain.flow</field>
        <field name="model">gain.flow</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="state" widget="statusbar" nolabel="1"/>
                    <button name="go_validate" string="Valider" type="object" class="btn-primary"
                            attrs="{'invisible': [('state', '=', 'confirm')]}"/>
                    <button name="back_draft" string="Remettre en brouillon" type="object" class="btn-primary"
                            attrs="{'invisible': [('state', '=', 'draft')]}"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name='reference' readonly="1" />
                        </h1>
                    </div>
                    <group>
                        <group string="Informations générale">
                            <field name="date" attrs="{'readonly': [('state', '=', 'confirm')]}"/>
                            <field name="operation_type" attrs="{'readonly': [('state', '=', 'confirm')]}"/>
                            <field name="description" attrs="{'readonly': [('state', '=', 'confirm')]}"/>
                        </group>
                        <group string="">
                            <field name="amount" attrs="{'readonly': [('state', '=', 'confirm')]}"/>
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" groups="base.group_user"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="action_gainflow_view" model="ir.actions.act_window">
        <field name="name">Bénéfice</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">gain.flow</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Ajoutez des opérations!
            </p>
        </field>
    </record>

    <menuitem id="menu_gain_flow"
              name="Bénéfices"
              action="action_gainflow_view"
              parent="account_transfer.menu_results_root"
              sequence="8"/>
</odoo>