<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="view_payment_tree" model="ir.ui.view">
        <field name="name">payment.form.tree</field>
        <field name="model">payment.form</field>
        <field name="arch" type="xml">
            <tree>
                <field name="reference"/>
                <field name="date"/>
                <field name="client"/>
                <field name="amount" sum="Total of Amount"/>
                <field name="state" widget="badge"
                       decoration-success="state == 'confirm'"
                       decoration-info="state == 'draft'"/>
            </tree>
        </field>
    </record>

    <record id="view_payment_form" model="ir.ui.view">
        <field name="name">payment.form.form</field>
        <field name="model">payment.form</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="state" widget="statusbar" nolabel="1"/>
                    <button name="send_to_balance" string="Ajouter au suivi" type="object" class="btn-primary"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="reference" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="date"/>
                            <field name="client"/>
                            <field name="currency_code"/>
                            <field name="amount"/>
                        </group>
                        <group>
                            <field name="currency"/>
                            <field name="calculated_currency"/>
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" groups="base.group_user"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="view_payment_search" model="ir.ui.view">
        <field name="name">payment.form.search</field>
        <field name="model">payment.form</field>
        <field name="arch" type="xml">
            <search>
                <field name="client" filter_domain="[
                        '|', ('client', 'ilike', self), ('reference', 'ilike', self)]"/>
                <field name="reference"/>
            </search>
        </field>
    </record>

    <record id="action_payment_list" model="ir.actions.act_window">
        <field name="name">Liste des paiements</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">payment.form</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Ajoutez des paiements!
            </p>
            <p>
                Votre liste est vide.
                <br/>
                Commencez par cr√©er des paiements.
            </p>
        </field>
    </record>

    <menuitem id="menu_payment_list"
              name="Paiements"
              action="action_payment_list"
              parent="menu_transfer_list_root"
              sequence="8"/>

</odoo>