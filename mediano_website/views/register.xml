<odoo>
    <!-- Inscription step 1 -->
    <template id="stepone" name="Inscription 1/3">
        <t t-call="web.login_layout">
            <div class="form-modal flex-column">
                <div id="div-logo">
                    <img src="/mediano_website/static/src/img/logo.png" class="logo-mediano"/>
                </div>
                <div class="text-center mb-4 px-1">
                    <span class="title">Bienvenue</span>
                    <p class="mb-0">Inscrivez-vous sur la meilleure plateforme de vente d'équipements
                        médicaux.
                    </p>
                </div>
                <div id="email-form" class="col-10 col-sm-8 col-md-8 col-lg-8">
                    <form class="oe_signup_form" role="form" method="post" action="/register"
                          style="margin-top: 0px;">
                        <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                        <input type="hidden" name="stepone"/>

                        <!-- Section Erreur -->
                        <t t-if="error" role="alert">
                            <t t-esc="error"/>
                        </t>

                        <div class="mb-3 field-login">
                            <div class="input-group">
                                <!--                                <label for="login">Email</label>-->
                                <input type="email" pattern="[a-z0-9.]+@[a-z0-9]+\.[a-z]{2,4}$"
                                       placeholder="Email" name="login"
                                       t-att-value="login" id="login"
                                       t-attf-class="form-control #{'form-control-sm' if form_small else ''} border-0"
                                       required="required" autofocus="autofocus" autocapitalize="off"/>
                                <div class="input-group-prepend">
                                    <span class="input-group-text h-100 bg-white border-0">
                                        <span class="fa fa-envelope" style="color:#185fa5;"/>
                                    </span>
                                </div>
                            </div>
                        </div>

                        <div class="mb-3 field-password pt-2">
                            <div class="input-group fieldd">
                                <!--                                <label for="password">Mot de passe</label>-->
                                <input type="password" placeholder="Mot de passe" name="password" id="password"
                                       t-attf-class="form-control #{'form-control-sm' if form_small else ''} password secupass border-0"
                                       required="required" autocomplete="current-password"
                                       t-att-autofocus="'autofocus' if login else None" minlength="4"/>
                                <div class="show-pass">
                                    <i class="material-icons">visibility</i>
                                </div>
                                <div class="input-group-prepend">
                                    <span class="input-group-text h-100 bg-white border-0">
                                        <span class="fa fa-lock" style="color:#185fa5;"/>
                                    </span>
                                </div>
                            </div>
                            <div class="progres-bar">
                                <div/>
                                <div/>
                                <div/>
                                <div/>
                            </div>
                            <div class="pourcentage hidden">
                                <div class="digit">0</div>%
                            </div>
                        </div>

                        <div class="mb-3 field-confirm_password pt-2">
                            <div class="input-group fieldd">
                                <!--                                <label for="confirm_password">Confirmer mot de passe</label>-->
                                <input type="password" placeholder="Confirmer mot de passe" name="confirm_password"
                                       id="confirm_password"
                                       t-attf-class="form-control #{'form-control-sm' if form_small else ''} password-confirm secupass-confirm border-0"
                                       required="required" autocomplete="current-password"
                                       t-att-autofocus="'autofocus' if login else None" minlength="4"/>
                                <div class="show-pass-confirm">
                                    <i class="material-icons">visibility</i>
                                </div>
                                <div class="input-group-prepend">
                                    <span class="input-group-text h-100 bg-white border-0">
                                        <span class="fa fa-lock" style="color:#185fa5;"/>
                                    </span>
                                </div>
                            </div>
                            <div class="progres-bar-confirm">
                                <div/>
                                <div/>
                                <div/>
                                <div/>
                            </div>
                            <div class="pourcentage-confirm hidden">
                                <div class="digit-confirm">0</div>%
                            </div>
                        </div>

                        <!--                            <input type="hidden" name="recaptcha_on" t-att-value="False"/>-->

                        <!--                            &lt;!&ndash; Ajout de la div de recaptcha &ndash;&gt;-->
                        <!--                            <t t-if="recaptcha_on == True">-->
                        <!--                                <script src='https://www.google.com/recaptcha/api.js'/>-->
                        <!--                                <div id="captcha" class="imageContainer">-->
                        <!--                                    <div class="mb-3">-->
                        <!--                                        &lt;!&ndash; specify your site  in data-sitekey attribute&ndash;&gt;-->
                        <!--                                        <div class="g-recaptcha mb-3" data-sitekey="your_site_key_goes_here"/>-->
                        <!--                                        <div class="help-block with-errors" id="err" style='color: red'/>-->
                        <!--                                    </div>-->
                        <!--                                </div>-->
                        <!--                            </t>-->

                        <!--                            <t t-else="">-->

                        <!--                            </t>-->


                        <input type="hidden" name="redirect" t-att-value="redirect"/>
                        <input type="hidden" name="token" t-att-value="token"/>
                        <div class="clearfix oe_login_buttons text-center gap-1 d-grid mb-1 {{'pt-2' if form_small else 'pt-3'}}">
                            <button type="submit" class="btn btn-primary btn-block">Suivant</button>
                        </div>
                        <div class="d-flex justify-content-center align-items-center small mt-2">
                            <a t-if="not token" t-attf-href="/web/login?{{ keep_query() }}">Retour à la page
                                d'authentification
                            </a>
                        </div>
                        <br/>
                    </form>
                </div>
            </div>
        </t>
    </template>

    <!-- Inscription step 2 -->
    <template id="steptwo" name="Inscription 2/3">
