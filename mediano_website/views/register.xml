                <div id="email-form col-10 col-sm-8 col-md-8 col-lg-8" style="width: 300px;">
                    <input type="hidden" name="sms_on" t-att-value="False"/>
                    <input type="hidden" name="recaptcha_on" t-att-value="False"/>
                    <!-- Affiche si sms est activé dans les configs -->
                    <form class="oe_signup_form my-0" role="form" method="post" action="/register/process">
                        <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                        <input type="hidden" name="steptwo"/>

