                                <!--                                <label for="name">Nom Complet</label>-->
                                <input type="text" placeholder="e.g. Coulibaly Karim" name="name" id="name"
                                       t-attf-class="form-control #{'form-control-sm' if form_small else ''} border-0"
                                       required="required"/>
                                <div class="input-group-prepend">
                                    <span class="input-group-text h-100 bg-white border-0">
                                        <span class="fa fa-user" style="color:#185fa5;"/>
                                    </span>
                                </div>
                            </div>
                        </div>

                        <div class="mb-3 field-login hidden">
                            <div class="input-group">
                                <!--                                <label for="login">Email</label>-->
                                <input type="email" pattern="[a-z0-9.]+@[a-z0-9]+\.[a-z]{2,4}$"
                                       placeholder="Email" name="login"
                                       t-att-value="login" id="login"
                                       t-attf-class="form-control #{'form-control-sm' if form_small else ''} border-0"
                                       autofocus="autofocus" autocapitalize="off"/>
                                <div class="input-group-prepend">
                                    <span class="input-group-text h-100 bg-white border-0">
                                        <span class="fa fa-envelope" style="color:#185fa5;"/>
                                    </span>
                                </div>
                            </div>
                        </div>

                        <div class="mb-3 field-phone">
                            <div class="input-group">
                                <!--                                <label for="phone">N° de Téléphone</label>-->
                                <input type="text" placeholder="N° de Téléphone" name="phone"
                                       onkeypress="return onlyNumberKey(event)"
                                       t-att-value="phone" id="phone"
                                       t-attf-class="form-control #{'form-control-sm' if form_small else ''} border-0"
                                       required="required" autofocus="autofocus" autocapitalize="off"/>
                                <div class="input-group-prepend">
                                    <span class="input-group-text h-100 bg-white border-0">
                                        <span class="fa fa-phone" style="color:#185fa5;"/>
                                    </span>
                                </div>
                            </div>
                        </div>

                        <div class="mb-3 field-password pt-2 hidden">
                            <div class="input-group">
                                <!--                                <label for="password">Mot de passe</label>-->
                                <input type="password" placeholder="Mot de passe" name="password" id="password"
                                       t-attf-class="form-control #{'form-control-sm' if form_small else ''} border-0"
                                       autocomplete="current-password"
                                       t-att-value="password"
                                       t-att-autofocus="'autofocus' if login else None" maxlength="4096"/>
                                <div class="input-group-prepend">
                                    <span class="input-group-text h-100 bg-white border-0">
                                        <span class="fa fa-lock" style="color:#185fa5;"/>
                                    </span>
                                </div>
                            </div>
                        </div>

                        <div class="mb-3 field-confirm_password hidden">
                            <div class="input-group">
                                <!--                                <label for="confirm_password">Confirmer mot de passe</label>-->
                                <input type="password" placeholder="Confirmer mot de passe" name="confirm_password"
                                       id="confirm_password"
                                       t-attf-class="form-control #{'form-control-sm' if form_small else ''} border-0"
                                       autocomplete="current-password"
                                       t-att-value="confirm_password"
                                       t-att-autofocus="'autofocus' if login else None" maxlength="4096"/>
                                <div class="input-group-prepend">
                                    <span class="input-group-text h-100 bg-white border-0">
                                        <span class="fa fa-lock" style="color:#185fa5;"/>
                                    </span>
                                </div>
                            </div>
                        </div>

<!--                        <t t-call="mediano_website.recaptcha"/>-->

                        <input type="hidden" name="redirect" t-att-value="redirect"/>
                        <input type="hidden" name="token" t-att-value="token"/>
                        <div class="clearfix oe_login_buttons text-center gap-1 d-grid mb-1 mt-2 {{'pt-2' if form_small else 'pt-3'}}">
                            <button type="submit" id="reg" class="btn btn-primary btn-block">Suivant</button>
                            <br/>
                        </div>
                        <script>
                            function onlyNumberKey(evt) {

                            // Only ASCII character in that range allowed
                            var ASCIICode = (evt.which) ? evt.which : evt.keyCode
                            if (ASCIICode &gt; 31 &amp;&amp; (ASCIICode&lt;48 || ASCIICode > 57))
                            return false;
                            return true;
                            }
                        </script>
                        <!--                            <t t-esc="show_hide_div()"/>-->
                    </form>

                </div>
            </div>
        </t>
    </template>

