    <record id="ir_actions_dashboard_action_sale" model="ir.actions.server">
        <field name="name">action.dashboard.sale</field>
        <field name="model_id" ref="model_sale_report" />
        <field name="state">code</field>
        <field name="code">
            action = model._action_dashboard_sale()
        </field>
    </record>

    <record id="ir_actions_dashboard_action_sale_order" model="ir.actions.server">
        <field name="name">action.dashboard.sale</field>
        <field name="model_id" ref="model_sale_report" />
        <field name="state">code</field>
        <field name="code">
            action = model._action_dashboard_sale_order()
        </field>
    </record>

    <record id="ir_actions_dashboard_action_sale_indicateurs" model="ir.actions.server">
        <field name="name">action.dashboard.sale</field>
        <field name="model_id" ref="model_sale_report" />
        <field name="state">code</field>
        <field name="code">
            action = model._action_dashboard_sale_indicateurs()
        </field>
    </record>

    <record id="ir_actions_dashboard_action_sale_pivot" model="ir.actions.act_window">
        <field name="name">Tableau de bord des ventes de pivot</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">sale.report</field>
        <field name="view_mode">graph</field>
        <field name="view_id" ref="sale.view_order_product_graph" />

    </record>

    <!--My Dashboard Menu-->
