        id="board.menu_board_my_dash"
        parent="base.menu_board_root"
        name="Ventes"
        action="ir_actions_dashboard_action_sale"
        sequence="1" active="True" />

    <menuitem
        id="sale_dashboard_menu"
        name="Ventes"
        parent="board.menu_board_my_dash"
        action="ir_actions_dashboard_action_sale"
        sequence="2"/>

