        <!-- Menu -->

        <menuitem id="menu_encaissement_commerciaux_secii" name="Commerciaux"
                  parent="sale.sale_menu_root"
                  sequence="6"
        />

        <!--Sous Menus -->
        <!--masque la vue du champs encaissement pour tous ceux qui ne sont pas dans les groupes-->
        <menuitem name="Encaissements"
                  id="commerciaux_secii"
                  parent="menu_encaissement_commerciaux_secii"
                  sequence="1"
                  action="encaissement_secii_action"
                  groups="account_secii.secii_users,account_secii.secii_box_see_all"/>
        />

        <menuitem name="Mes encaissements"
                  id="commercial_secii"
