<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <!-- Vue Liste pour la synthèse des paiements -->
        <record id="synthese_secii_list" model="ir.ui.view">
            <field name="name">secii.synthese.list</field>
            <field name="model">secii.synthese</field>
            <field name="arch" type="xml">
                <tree string="Synthèse" create='false' delete="false">
                    <field name="client" width="1"/>
                    <field name="total_commandes" width="1" sum="Total des Commandes"/>
                    <field name="somme_payee" width="1" sum="Total des Sommes Payées"/>
                    <field name="retour" width="1" sum="Total des Marchandises Retournées"/>
                    <field name="reste" width="1" sum="Total des Soldes Finaux"/>
                    <field name="commune" invisible="1"/>
                </tree>
            </field>
        </record>

        <!-- Vue Kanban pour la synthèse des paiements  -->
        <record model="ir.ui.view" id="secii_synthese_kanban_view">
            <field name="name">secii.synthese.kanban</field>
            <field name="model">secii.synthese</field>
            <field name="arch" type="xml">
                <kanban class="o_res_partner_kanban" sample="1">
                    <field name="client"/>
                    <field name="commune"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_global_click">
                                <div class="oe_kanban_details d-flex flex-column">
                                    <strong class="o_kanban_record_title">
                                        <field name="commune"/>
                                    </strong>
                                    <div>
                                        <field name="client"/>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- Vue Liste pour le O2M secii enc -->
        <record id="enc_secii_list" model="ir.ui.view">
            <field name="name">secii.enc.list</field>
            <field name="model">secii.enc</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="date" width="1"/>
                    <field name="date_effective" width="1"/>
                    <field name="num_seq" width="1"/>
                    <field name="commercial" width="1"/>
                    <field name="libele_op" width="1"/>
                    <field name="partenaire" width="1"/>
                    <field name="montant_total" width="1"/>
                    <field name="somme_paye" width="1"/>
                    <field name="credit_client" width="1"/>
                    <field name="status" width="1" widget="badge" decoration-success="status == 'paye'"/>
                    <button type="object" icon="fa-trash" name="unlink"/>
                </tree>
            </field>
        </record>

        <!-- Vue Form pour le O2M secii enc -->
        <record id="enc_secii_form" model="ir.ui.view">
            <field name="name">secii.enc.form</field>
            <field name="model">secii.enc</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button class="oe_stat_button" type="object"
                                    name="enclink" icon="fa-pencil-square-o">
                                <div class="o_form_field o_stat_info">
                                    <span class="o_stat_text">
                                        <field name="num_seq" width="1"/>
                                    </span>
                                </div>
                            </button>
                        </div>
                        <group>
                            <group name="left">
                                <field name="date" width="1"/>
                                <field name="num_seq" width="1"/>
                                <field name="commercial" width="1"/>
                                <field name="libele_op" width="1"/>
                            </group>
                            <group name="right">
                                <field name="partenaire" width="1"/>
                                <field name="montant_total" width="1"/>
                                <field name="somme_paye" width="1"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Vue Liste pour le O2M secii vente -->
        <record id="vente_secii_list" model="ir.ui.view">
            <field name="name">secii.vente.list</field>
            <field name="model">secii.vente</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name" width="1"/>
                    <field name="date_order" width="1"/>
                    <field name="numero_bon" width="1"/>
                    <field name="partner_id" width="1"/>
                    <field name="user_id" width="1"/>
                    <field name="amount_total" width="1"/>
                    <button type="object" icon="fa-trash" name="unlink"/>
                </tree>
            </field>
        </record>

        <!-- Vue Form pour le O2M secii vente -->
        <record id="vente_secii_form" model="ir.ui.view">
            <field name="name">secii.vente.form</field>
            <field name="model">secii.vente</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button class="oe_stat_button" type="object"
                                    name="namelink" icon="fa-pencil-square-o">
                                <div class="o_form_field o_stat_info">
                                    <span class="o_stat_text">
                                        <field name="name" width="1"/>
                                    </span>
                                </div>
                            </button>
                        </div>
                        <group>
                            <group name="left">
                                <field name="name" width="1"/>
                                <field name="date_order" width="1"/>
                                <field name="numero_bon" width="1"/>
                            </group>
                            <group name="right">
                                <field name="partner_id" width="1"/>
                                <field name="user_id" width="1"/>
                                <field name="amount_total" width="1"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Vue Inherit Purchase Order pour ajout du bouton -->
        <record id="button_retour_achat" model="ir.ui.view">
            <field name="name">purchase.order.form.retour</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="arch" type="xml">
                <field name="is_prive" position="after">
                    <field name="retour" width="1" string="Retour de marchandises"/>
                    <field name="suivi_up" invisible="1"/>
                </field>
                <button name="button_unlock" position="after">
                    <button name="recup_purchase" type="object" string="MAJ" attrs="{'invisible':['|', ('suivi_up','=',True), ('state','=','draft')]}" groups="account_secii.secii_users,account_secii.secii_box_see_all"/>
                </button>

            </field>
        </record>

        <!-- Vue Form Inherit Sale Order pour ajout d'un champ Text -->
        <record id="text_inherit_sale_order_form" model="ir.ui.view">
            <field name="name">inherited.sale.order.form.text</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <field name="is_prive" position="after">
                    <field name="numero_bon" string="Numéro de Bon"/>
                    <field name="suivi_up" invisible="1"/>
                </field>
<!--                <xpath expr="//header/button[@name='action_confirm'][2]" position="after">-->
<!--                    <button type="object" string="Mise à jour Suivi Client" name="recup_all" groups="account_secii.secii_users,account_secii.secii_box_see_all"/>-->
<!--                    <button type="object" string="MAJ" attrs="{'invisible':['|', ('suivi_up','=',True), ('state','=','draft')]}" name="recup_sale_rel_client" groups="account_secii.secii_users,account_secii.secii_box_see_all"/>-->
<!--                </xpath>-->
            </field>
        </record>

        <!-- Vue Tree Inherit Sale Order pour ajout d'un champ Text -->
        <record id="text_inherit_sale_order_tree" model="ir.ui.view">
            <field name="name">inherited.sale.order.tree.text</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_quotation_tree_with_onboarding"/>
            <field name="arch" type="xml">
                <xpath expr="//tree/field[@name='partner_id']" position="after">
                    <field name="numero_bon"/>
                </xpath>
            </field>
        </record>


        <!-- Vue Formulaire la synthèse des paiements -->
        <record id="synthese_secii_form" model="ir.ui.view">
            <field name="name">secii.synthese.form</field>
            <field name="model">secii.synthese</field>
            <field name="arch" type="xml">
                <form create='false' edit='false' delete="false">
                    <header style="margin-top:25px;">
                        <button name="printer_button" type="object"
                                string="Imprimer"
                                class="oe_highlight"
                                context="{'default_client': client}" icon="fa-print"/>
                        <button name="whatsapp_button" type="object" string="Envoyer par Whatsapp" icon="fa-whatsapp"/>
                        <button name="excel_button" type="object" string="Exporter vers Excel" class="oe_highlight"
                                context="{'default_client': client}" icon="fa-solid fa-file-excel-o"/>
                    </header>
                    <sheet>
                        <widget name="web_ribbon" title="Archivé" bg_color="bg-danger"
                                attrs="{'invisible': [('active', '=', True)]}"/>
                        <group>
                            <group>
                                <field name="client" width="1"/>
                                <field name="somme_payee" width="1"/>
                                <field name="retour" width="1"/>
                                <field name="active" invisible="1"/>
                            </group>
                            <group>
                                <field name="total_commandes" width="1"/>
                                <field name="reste" width="1"/>
                            </group>
                        </group>
                        <notebook>
                            <!--                            <page string="Bon de commandes">-->
                            <!--                                <field name="saleorder_ids"/>-->
                            <!--                            </page>-->
                            <page string="Bon de commandes">
                                <field name="sale_ids"/>
                            </page>
                            <!--                            <page string="Total des encaissements">-->
                            <!--                                <field name="encaissement_ids"/>-->
                            <!--                            </page>-->
                            <page string="Encaissements">
                                <field name="encaisse_ids"/>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" groups="base.group_user"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="view_commune_filter" model="ir.ui.view">
            <field name="name">secii.synthese.search</field>
            <field name="model">secii.synthese</field>
            <field name="arch" type="xml">
                <search string="Rélévé Client">
                    <field name="client" filter_domain="[('client','ilike',self)]"/>
                    <separator/>
                    <filter string="Archivé" name="inactive" domain="[('active','=',False)]"/>
                    <separator/>
                    <filter string="Tri par Commune" name="commune" domain="[('commune','!=', False)]"/>
                    <group expand="0" string="Group By">
                        <filter string="Tri par Commune" name="commune" domain="[]" context="{'group_by': 'commune'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- actions opening views on models -->
        <record id="synthese_secii_action" model="ir.actions.act_window">
            <field name="name">Relevé Client</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">secii.synthese</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'search_default_commune':1}</field>
            <field name="view_id" ref="synthese_secii_list"/>
            <!--            <field name="context">{'search_default_commercial': 1, 'search_default_filtre_semaine': 1}</field>-->
        </record>

        <!--Action server permettant de définir un domaine pour la commission du commercial-->
        <record id="action_server_releve_view" model="ir.actions.server">
            <field name="name">Relevé du Client</field>
            <field name="model_id" ref="account_secii.model_secii_synthese"/>
            <field name="state">code</field>
            <field name="code">action = env['secii.synthese'].fill_form()</field>
        </record>

        <!-- -->
        <!-- -->


<!--        <menuitem id="rapports_secii_sous_menu" name="Relevé de comptes clients"-->
<!--                  parent="account.menu_finance_receivables"-->
<!--                  action="action_server_releve_view"-->
<!--                  sequence="111"-->
<!--        />-->
    </data>
</odoo>