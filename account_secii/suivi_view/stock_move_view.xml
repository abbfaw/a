<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="inherit_stock_move_form" model="ir.ui.view">
        <field name="name">inherited.stock.move.form</field>
        <field name="model">stock.move</field>
        <field name="inherit_id" ref="stock.view_move_form"/>
        <field name="arch" type="xml">
            <field name="reference" position="after">
                <field name="is_prive" invisible="1"/>
            </field>
        </field>
    </record>

<!--    stock location form-->
    <record id="inherit_stock_location_form" model="ir.ui.view">
            <field name="name">inherited.stock.location.form</field>
            <field name="model">stock.location</field>
            <field name="inherit_id" ref="stock.view_location_form"/>
            <field name="arch" type="xml">
                <field name="usage" position="after">
                    <field name="to_receive"/>
                </field>
            </field>
        </record>

    <record id="inherit_stock_move_action" model="ir.actions.act_window">
        <field name="name">Mouvements de stocks</field>
        <field name="res_model">stock.move</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_id" ref="stock.view_move_tree"/>
        <field name="search_view_id" ref="stock.view_move_search"/>
        <field name="domain">[('is_prive','=',False),('location_dest_id.to_receive','!=',True)]</field>
        <field name="context">{'search_default_done': 1, 'search_default_groupby_location_id': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Aucun mouvement de stock trouvé
            </p>
            <p>
                Ce menu vous donne la traçabilité complète de l'inventaire
                opérations sur un produit spécifique. Vous pouvez filtrer sur le produit
                pour voir tous les mouvements passés ou futurs du produit.
            </p>
        </field>
    </record>

    <record id="inherit_stock_move_action_private" model="ir.actions.act_window">
        <field name="name">Mouvements de stocks</field>
        <field name="res_model">stock.move</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_id" ref="stock.view_move_tree"/>
        <field name="search_view_id" ref="stock.view_move_search"/>
        <field name="domain">[('location_dest_id.to_receive','!=',True)]</field>
        <field name="context">{'search_default_done': 1, 'search_default_groupby_location_id': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Aucun mouvement de stock trouvé
            </p>
            <p>
                Ce menu vous donne la traçabilité complète de l'inventaire
                opérations sur un produit spécifique. Vous pouvez filtrer sur le produit
                pour voir tous les mouvements passés ou futurs du produit.
            </p>
        </field>
    </record>
