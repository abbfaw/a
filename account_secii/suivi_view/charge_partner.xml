<?xml version="1.0" encoding="utf-8" ?>

<odoo>
    <record id="partner_charge_form" model="ir.ui.view">
        <field name="name">partner.charge.form</field>
        <field name="model">partner.charge</field>
        <field name="arch" type="xml">
            <form>
                <header style="margin-top:25px;">
                    <field name="state" widget="statusbar"/>
                    <button name="action_to_count" type="object" string="Comptabiliser"
                            class="oe_highlight" attrs="{'invisible':['|',('is_prive','=',True),('state','=','posted')]}"/>
                    <button name="put_to_draft" type="object" string="Mettre en brouillon"
                            class="oe_highlight" attrs="{'invisible':[('state','not in',('posted','instance'))]}"/>
                    <button name="add_to_tracking" type="object" string="Ajouter au suivi"
                            class="oe_highlight" attrs="{'invisible':['|',('is_prive','!=',True),('state','in',('posted','instance'))]}"/>
                </header>
                <sheet>
                    <div class="oe_button_box"
                         name="button_box">
                        <button class="oe_stat_button" type="object"
                                name="open_journal_change" icon="fa-book"
                                attrs="{'invisible':[('state','!=','posted')]}"
                        >
                            <div class="o_form_field o_stat_info">
                                <span class="o_stat_text">Journal de change</span>
                            </div>
                        </button>
                    </div>
                    <widget name="web_ribbon" text="COMPTABILISE" bg_color="bg-success"
                            attrs="{'invisible': [('state', '!=', 'posted')]}"
                            tooltip="ce change est validée"/>
                    <group>
                        <group>
                            <field name="name" readonly="1"/>
                            <field name="partner" attrs="{'readonly':[('state','in',('posted','instance'))]}"/>
                            <field name="is_prive" string="En instance" attrs="{'invisible':[('add_payment','=',True)]}"/>
                            <field name="purchases" options="{'no_create': True}" attrs="{'invisible':[('is_prive','!=',True)],'readonly':[('state','in',('posted','instance'))]}"
                                   domain="[('partner_id','=',partner)]"/>
                            <field name="account_move_id" options="{'no_create': True}"
                                   attrs="{'invisible':[('is_prive','=',True)],'readonly':[('state','in',('posted','instance'))]}"
                                   domain="[('partner_id','=',partner)]"/>
                            <field name="currency_id" readonly="1" force_save="1"/>
                            <field name="company_curreny_bool" invisible="1"/>
                            <field name="purchase_amount" readonly="1" force_save="1"/>
                            <field name="edit_rate" readonly="1" force_save="1"
                                   attrs="{'invisible':[('company_curreny_bool','=',True)]}"/>
                        </group>
                        <group>
                            <field name="add_payment" attrs="{'readonly':[('state','in',('posted','instance'))],'invisible':[('is_prive','=',True)]}"/>
                            <field name="journal_id" domain="[('type', 'in', ('bank','cash'))]" options="{'no_create': True}"
                                   attrs="{'invisible':[('add_payment','!=',True)],'readonly':[('state','in',('posted','instance'))]}"/>
                            <field name="payment_instance_id" domain="[('partner_id','=',partner)]" options="{'no_create': True}"
                                   attrs="{'invisible':['|',('is_prive','!=',True),('add_payment','=',True)],'readonly':[('state','in',('posted','instance'))]}"/>
                            <field name="payment_id" domain="[('partner_id','=',partner)]" options="{'no_create': True}"
                                   attrs="{'invisible':['|',('is_prive','=',True),('add_payment','=',True)],'readonly':[('state','in',('posted','instance'))]}"/>
                            <field name="amount_taux" attrs="{'invisible':[('company_curreny_bool','=',True)]}"/>
                            <field name="amount" attrs="{'readonly':[('add_payment','!=',True)]}" force_save="1"/>
                        </group>
                        <group>
                            <field name="libele"/>
                        </group>
                        <group>
                            <field name="amount_init_currency" readonly="1" force_save="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="lines" name="Lines">
                            <field name="change_line"
                                   mode="tree,kanban" readonly="1" force_save="1">
                                <tree string="charge" >
                                    <field name="date" width="1.5" invisible="1"/>
                                    <field name="ref_purchases" width="1.5"/>
                                    <field name="amount" width="1.5" invisible="1"/>
                                    <field name="amount_perte" width="1.5"/>
                                    <field name="amount_gain" width="1.5"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" groups="base.group_user"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="partner_charge_line_form" model="ir.ui.view">
        <field name="name">partner.charge.line.form</field>
        <field name="model">partner.charge.line</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <label for="change_id"/>
                    <h1>
                        <field name="change_id" class="oe_inline"/>
                    </h1>
                    <group>
                        <group>
                            <field name="date"/>
                            <field name="ref_purchases"/>
                            <field name="amount"/>
                            <field name="amount_perte"/>
                            <field name="amount_gain"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="partner_charge_list" model="ir.ui.view">
        <field name="name">partner.charge.list</field>
        <field name="model">partner.charge</field>
        <field name="arch" type="xml">
            <tree string="charge">
                <field name="create_date" string="Date création" widget="date"/>
                <field name="partner"/>
                <field name="purchases" />
                <field name="currency_id" optional="hide"/>
                <field name="amount_taux"/>
                <field name="amount"/>
                <field name="state" optional="show" widget="badge" string="Statut" decoration-info="state == 'draft'"
                           decoration-success="state == 'posted'" decoration-warning="state == 'instance'"/>
            </tree>
        </field>
    </record>

    <record id="partner_charge_line_list" model="ir.ui.view">
        <field name="name">partner.charge.line.list</field>
        <field name="model">partner.charge.line</field>
        <field name="arch" type="xml">
            <tree string="charge">
                <field name="change_id"/>
                <field name="date"/>
                <field name="ref_purchases"/>
                <field name="amount"/>
                <field name="amount_perte"/>
                <field name="amount_gain"/>
            </tree>
        </field>
    </record>

     <record id="partner_charge_search" model="ir.ui.view">
            <field name="name">partner.charge.search</field>
            <field name="model">partner.charge</field>
            <field name="arch" type="xml">
                <search>
                    <field name="partner"/>
                    <field name="purchases"/>
                    <separator orientation="vertical"/>
                    <group expand="0" string="Group By">
                        <filter string="Fournisseurs" name="partner" domain="[]" context="{'group_by': 'partner'}"/>
                        <filter string="Achats" name="purchases" domain="[]" context="{'group_by': 'purchases'}"/>
                    </group>
                </search>
            </field>
        </record>

    <record id="partner_charge_action" model="ir.actions.act_window">
        <field name="name">Changes et paiements</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">partner.charge</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="partner_charge_list"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Créer un enregistrement
            </p>
        </field>
    </record>
    <record id="partner_charge_line_action" model="ir.actions.act_window">
        <field name="name">Calcule de pertes ou gain</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">partner.charge.line</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="partner_charge_line_list"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Créer un enregistrement
            </p>
        </field>
    </record>

    <menuitem name="Changes et Paiements"
              id="charge_purchase"
              parent="account.menu_finance_payables"
              sequence="23"
              action="partner_charge_action"
    />
</odoo>