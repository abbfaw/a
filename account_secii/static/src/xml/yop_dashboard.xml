<?xml version="1.0" encoding="UTF-8" ?>
<templates>
    <t t-name="account_secii.yopDashboard">
        <div class="o_yop_dashboard container">
        <div class="row">
            <div class="col-sm-5">
            <table class="table table-bordered">
                <!-- thead needed to avoid list view rendering error for some reason -->
                <thead>
                    <tr>
                    <!-- can't use th tag due to list rendering error when no values in list... -->
                        <td class="o_text text-dark" title="Solde disponible">
                            <div>Solde disponible</div>
                        </td>
                        <td class="o_text text-dark" title="Solde prévisionnel">
                            <div>Solde prévisionnel</div>
                        </td>
                        <td class="o_text text-dark" title="Total entrée">
                            <div>Total entrée</div>
                        </td>
                        <td class="o_text text-dark" title="Total sortie">
                            <div>Total sortie</div>
                        </td>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td class="o_text text-dark">
                            <t t-esc="values['all_total_validate']"/>
                        </td>
                        <td class="o_main o_yop_dashboard_action text-dark">
                            <t t-esc="values['all_total_draft']"/>
                        </td>
                        <td class="o_main o_yop_dashboard_action text-dark">
                            <t t-esc="values['all_in']"/>
                        </td>
                        <td class="o_main o_yop_dashboard_action text-dark">
                            <t t-esc="values['all_out']"/>
                        </td>
                    </tr>
                </tbody>
            </table>
            </div>
        </div>
        </div>
    </t>

</templates>