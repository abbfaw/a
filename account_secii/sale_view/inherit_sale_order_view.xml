    <menuitem name="Devis"
              id="sale_user_devis"
              parent="sale.sale_order_menu"
              action="action_quotations_with_onboarding_user_secii"
              sequence="-2"
              groups="account_secii.sale_secii_users,account_secii.secii_devis"
    />
    <menuitem name="Devis"
              id="sale_manager_devis"
              parent="sale.sale_order_menu"
              action="action_quotations_with_onboarding_manager_secii"
              sequence="-2"
              groups="account_secii.sale_secii_box_see_all"
    />
    <menuitem name="commandes"
              id="sale_user_commande"
              parent="sale.sale_order_menu"
              action="sale_user_action_orders"
              sequence="-1"
              groups="account_secii.sale_secii_users"
    />
    <menuitem name="commandes"
              id="sale_manager_commande"
              parent="sale.sale_order_menu"
              action="sale_manager_action_orders"
              sequence="-1"
              groups="account_secii.sale_secii_box_see_all"
    />
    <menuitem id="sale.menu_sale_quotations" active="False"/>
    <menuitem id="sale.menu_sale_order" active="False"/>

